{
  "name": "highroll-online-board-game",
  "version": "1.0.0",
  "description": "An online multiplayer board game project.",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:cf": "concurrently \"npm:dev:cf:api\" \"npm:dev:client\"",
    "dev:client": "wait-on -l http://127.0.0.1:4000/health && vite --host 0.0.0.0",
    "dev:cf:api": "npm --prefix workers run dev -- --port 4000",
    "dev:server": "ts-node-dev --respawn --project tsconfig.server.json src/server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/server/index.js",
    "typecheck": "tsc --noEmit",
    "test": "jest --config config/jest.config.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.0"
  },
  "keywords": [
    "board game",
    "multiplayer",
    "online"
  ],
  "author": "Your Name",
  "license": "MIT",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "type": "commonjs"
}
