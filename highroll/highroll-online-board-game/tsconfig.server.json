{
    "extends":  "./tsconfig.json",
    "compilerOptions":  {
                            "module":  "CommonJS",
                            "target":  "ES2020",
                            "outDir":  "dist/server",
                            "rootDir":  "src",
                            "noEmit":  false,
                            "moduleResolution":  "node"
                        },
    "include":  [
                    "src/server",
                    "src/shared"
                ],
    "exclude":  [
                    "**/*.test.ts",
                    "**/*.test.tsx",
                    "tests",
                    "dist",
                    "node_modules"
                ]
}
